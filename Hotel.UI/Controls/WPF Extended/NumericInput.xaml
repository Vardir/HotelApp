<UserControl x:Class="Hotel.UI.Controls.NumericInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel.UI.Controls"
             mc:Ignorable="d" x:Name="Container"
             MinWidth="50" MinHeight="30"
             d:DesignHeight="50" d:DesignWidth="180">
    <Border>
        <TextBox Text="{Binding Value, ElementName=Container}" />
    </Border>
</UserControl>
